Import("env")
env.Append(CPPFLAGS="/EHsc", CPPPATH=Dir("#include"))
env.SharedLibrary(
	target="reaper_osara%s" % env["dllSuffix"],
	source=[
		"reaper_osara.cpp",
		env.RES("reaper_osara.rc"),
	],
	LIBS=[
		"user32",
		"ole32",
		"oleacc",
	],
)
